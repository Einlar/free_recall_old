datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Subject {
  id      String         @id @default(uuid())
  email   String
  age     Int
  gender  Gender
  records RecallRecord[]
}

model RecallRecord {
  id             Int        @id @default(autoincrement())
  createdAt      DateTime   @default(now())
  type           RecordType
  presentedWords String[]
  words          Json[]
  subject        Subject    @relation(fields: [subjectId], references: [id])
  subjectId      String
}

// A list can be either random or have categories
// A list contains words with a list-specific rank
model WordList {
  id         Int      @id @default(autoincrement())
  length     Int
  type       ListType
  categories String[]
  words      Json[] //The schema should be specified, but it is currently kept general for flexibility
}

enum RecordType {
  RECALL
  RECOGNITION
}

enum ListType {
  RANDOM
  CATEGORIZED
  CATEGORY
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY
}
